<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Apply the margin value on the "item" element -->
    <!-- This example creates a 15dp visible margin around the dialog -->
    <item
        android:left="@dimen/margin_normal_15"
        android:right="@dimen/margin_normal_15">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid
                android:color="@color/white"/>
            <corners
                android:radius="@dimen/radius_normal_15" />
        </shape>
    </item>
</layer-list>