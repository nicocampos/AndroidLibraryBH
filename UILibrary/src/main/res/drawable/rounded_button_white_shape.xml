<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:left="0dp"
    android:right="0dp"
    android:bottom="3dp"
    android:top="3dp">

    <!-- Insert your shape here: -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="@color/white" />
        <padding
            android:bottom="@dimen/margin_small_5"
            android:left="@dimen/margin_normal_10"
            android:right="@dimen/margin_small_1"
            android:top="@dimen/margin_small_5" />

        <stroke
            android:width="@dimen/margin_small_1"
            android:color="@color/white" />

        <corners android:radius="@dimen/margin_small_7"/>
    </shape>

</item>
</layer-list>