<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:top="0dp">

        <!-- Insert your shape here: -->
        <shape>
            <solid android:color="@color/onboard_bg_gray" />
            <padding
                android:bottom="@dimen/margin_small_5"
                android:left="@dimen/margin_normal_10"
                android:right="@dimen/margin_normal_10"
                android:top="@dimen/margin_small_5" />

            <stroke
                android:width="@dimen/margin_small_1"
                android:color="@color/onboard_bg_gray" />

            <corners android:radius="@dimen/radius_all_10"/>
        </shape>

    </item>
</layer-list>