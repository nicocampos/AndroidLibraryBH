<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="@dimen/spinner_stroke_width" android:color="#e0e0e0" />
                    <corners android:radius="@dimen/spinner_radius" />
                    <padding android:bottom="@dimen/spinner_small_margin" android:left="@dimen/spinner_small_margin" android:right="@dimen/spinner_long_margin" android:top="@dimen/spinner_small_margin" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right"
                    app:srcCompat="@drawable/ic_round_arrow_spinner_orange_vector"
                    android:src="@drawable/ic_round_arrow_spinner_orange_image" />
            </item>
        </layer-list>
    </item>
</selector>